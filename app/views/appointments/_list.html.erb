<div class="appointments-cards">
  <% appointments.each do |appointment| %>
    <div class="row d-flex align-items-stretch mb-3">

      <div class="col-12 col-md-6 pe-0"> 
        <div class="appointment-infos">
          <div>
            <div class="d-flex align-items-center mb-2">
              <%= image_tag "icons/calendar", width: 20, class:"me-2" %><%= appointment.date.strftime('%d/%m/%Y') %>
            </div>
            <div class="d-flex">
              <%= image_tag "icons/location", height: 25, class:"me-2" %><%= appointment.gardner.address %>
            </div>
            <div class="d-flex align-items-center">
              <%= image_tag "icons/reward", width: 20, class:"me-2" %>
              <%= GiverGardnerPoint.where(gardner: appointment.gardner, giver: appointment.giver)[0].nb_of_points %> / <%= appointment.gardner.nb_of_points_for_a_gift %>
            </div>
          </div>
          <div>
            <h3><%= appointment.gardner.garden_name %></h3>
            <div class="mb-2"><%= appointment.gardner.first_name %> <%= appointment.gardner.last_name%></div>
          </div>
          <div class="d-flex justify-content-center">
            <%= link_to root_path do %>
              <%= image_tag "conversation", id:"conversation-button", class:"move-on-hover", width: 140%>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-12 col-md-6 main-image" style="background-image: url('<%= cl_image_path appointment.gardner.main_image.key, crop: :fill %>'); background-size: cover">
      </div>
    </div>
    
  <% end %>
</div>
