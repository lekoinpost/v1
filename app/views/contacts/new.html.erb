<div class="section">
    <div class="container">
  
        <div class="row">
            <div class="d-none d-lg-block col-12 col-lg-6 img-fluid" style="background-image: url(<%= asset_path 'contact.jpg'%>">
            </div>
            <div class="col-12 col-lg-6 px-4">
                <h1 class="text-center mb-3">Nous contacter</h1>
                <%= simple_form_for(@contact, url: create_contact_path) do |f| %>
                    <div class="mb-4"><%= f.input :first_name, label: "Prénom", required: true, error: "Merci de saisir votre prénom." %></div>
                    <div class="mb-4"><%= f.input :last_name, label: "Nom", required: true, error: "Merci de saisir votre nom." %></div>
                    <div class="mb-4"><%= f.input :email, label: "Email", required: true, error: "Merci de saisir votre email." %></div>
                    <div class="mb-4"><%= f.input :content, label: "Votre message", input_html: { style: "min-height: 200px"}, required: true, error: "Merci de saisir votre message." %></div>
                    
                     <div class="cf-turnstile my-3"
                        data-sitekey="<%= ENV['TURNSTILE_SITE_KEY'] %>"
                        data-callback="turnstileSuccess">
                    </div>

                    <div class="d-flex justify-content-center">
                        <%= f.submit "Envoyer", class:"btn-egg my-4"%>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>