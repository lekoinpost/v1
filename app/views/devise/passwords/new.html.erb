<div class="section">
  <div class="container-small">
    <h2 class="my-4 text-center">Mot de passe oublié ?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="my-3">Entrer votre adresse mail pour recevoir un lien de réinitialisation de votre mot de passe :</div>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Envoyer", class:"btn-egg my-4" %>
      </div>
    <% end %>

     <small class="d-flex justify-content-center mt-3"><%= link_to " Pas encore inscrit ?", new_registration_path(resource_name), class:"ms-2" %></small>

    <small class="d-flex justify-content-center mt-2">Déjà un compte ?<%= link_to "Me connecter", new_session_path(resource_name), class:"ms-2" %></small>
  </div>
</div>
