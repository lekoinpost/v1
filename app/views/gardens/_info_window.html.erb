
<% if garden.main_image.key %>
  <%= cl_image_tag garden.main_image.key, width: 180, height: 87, crop: :fill %>
<% else %>
  <%= image_tag("default.png", width: 700, crop: :fill )%>
<% end %>
<div class="p-3">
  <div><%= garden.garden_name.upcase %></div>
  <div class="pt-1 pb-3"><%= garden.address %></div>
  <div class="d-flex justify-content-center">
    <%= link_to "VOIR", garden_path(slug: garden.slug), class:"btn-light" %>
  </div>
</div>
