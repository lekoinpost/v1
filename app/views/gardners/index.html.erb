<div class="section">
  <div class="container-large">
  
    <%= render "gardners/search" %>
    
    <% if @gardners.empty? %>
      <div class="text-center my-5">Aucun résultat trouvé !</div>

    <% else %>

      <div class="row mt-5">
        <div class="col-12 col-lg-6">
          <%= render "list", gardners: @gardners %>
        </div>
        <div class="col-12 col-lg-6">
          <div style="width: 100%; height: 600px;"
            data-controller="map" id="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
        </div>
      </div>
      
    <% end %>

  </div>
</div> 