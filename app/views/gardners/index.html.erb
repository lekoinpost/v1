<% @gardners.each do |gardner| %>

  <div>
    <%= link_to gardner_path(slug: gardner.slug) do %>
      <%= gardner.first_name %>
      <%= gardner.last_name%>
      <%= gardner.garden_name %>
      <%= gardner.description %>
      <%= cl_image_tag gardner.main_image.key, crop: :fill %>
    <% end %>
  </div>
<% end %>